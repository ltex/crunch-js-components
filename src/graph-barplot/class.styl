.h-bar-d3-tip.e
    line-height 1
    fill font-color-dark-grey
    font-size 14px
    font-weight normal
    padding 9px
    background color-tooltip
    border-radius 2px
.h-bar-d3-tip.e:after
    box-sizing: border-box
    display: inline;
    font-size: 10px;
    width: 100%;
    line-height: 1;
    position: absolute;
    pointer-events: none;
    content: "\25C0"
    margin: -4px 0 0 0
    top: 50%
    left: -8px
    color: color-tooltip
    position: absolute
