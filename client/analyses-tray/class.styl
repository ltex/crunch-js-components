.dataset-actions
    width 100%
    height 100%
    display flex
    flex-flow row nowrap
    justify-content flex-start
    align-items flex-start
    align-content flex-start

    .action-container
        height 100%

        &:first-child
            margin-right elements-space-m

        button
            width 30px
            height 100%
            background-repeat no-repeat
            background-size auto 14px
            background-position center
            text-transform uppercase
            font-size font-size-s

            &.save-analysis-button
                padding-top 4px
                color #9c9c9c

                &:hover
                    color color-green

            &.analyses-tray-toggle-button
                background-image url('show_menu.png')

                &:hover
                    background-image url('show_menu_hover.png')

                &.opened
                    background-image url('hide_menu.png')

                    &:hover
                        background-image url('hide_menu_hover.png')

            &.disabled
                cursor default

.analyses-tray
    tray-top            = 120px
    tray-v-space-s      = 9px
    tray-v-space-m      = 12px
    tray-v-space-l      = 36px
    tray-h-space-s      = 9px
    tray-h-space-m      = 12px
    tray-h-space-l      = 18px
    snapshot-width      = 180px
    tray-width          = snapshot-width + tray-h-space-l *  2

    position fixed
    height calc(100% - 120px)
    max-width tray-width
    min-width tray-width
    top tray-top
    right -(tray-width)
    background-color color-sidebar-grey
    box-shadow -1px 0 0px 0 #ffffff
    transition right ease-out 0.2s, opacity 0.1s linear
    opacity 0

    &.opened
        right 0
        z-index z-index-analyses-tray
        opacity 1

    .wrapper
        display flex
        flex-direction column
        align-items center
        justify-content flex-start

        ul.slides-list
            flex-basis calc(100% - 120px)
            height calc(100% - 63px)
            flex-grow 1
            overflow-y auto
            overflow-x hidden
            padding elements-space-s elements-space-m 0

            li.slide
                display block
                background color-white
                position relative
                margin-bottom elements-space-s
                width snapshot-width


                &:first-child
                    margin-top 0px

                &:hover
                    cursor pointer
                    background-color color-sidebar-dark-grey

                    .delete
                        display block

                &.selected
                    background-color color-white
                    outline 2px solid color-sidebar-dark-grey

                .slide-btn
                    cursor pointer
                    width 100%
                    padding tray-v-space-m tray-h-space-m
                    display block
                    position relative
                    text-align left
                    title-spacing = 3px
                    color font-color-dark-grey

                    &:hover
                        color font-color-green

                    h1, h2
                        overflow hidden
                        text-overflow ellipsis
                        white-space nowrap

                    h1
                        margin-top tray-v-space-s
                        font-weight font-weight-normal
                        font-size font-size-m
                        margin-bottom title-spacing

                    h2
                        font-weight font-weight-normal
                        font-size font-size-m

                    .icon-table, .icon-graph
                        font-size 25px
                        &:not(:parent:hover)
                            color font-color-light-grey

                .delete
                    display none
                    position absolute
                    right 3px
                    top 3px
                    font-size 15px
                    color font-color-dark-grey
                    .icon-remove
                        opacity 1

    .empty,
    .download
        display block
        font-size font-size-m
        font-weight font-weight-normal
        color font-color-dark-grey
        padding tray-h-space-m
        margin 3px 0 9px
        width -moz-fill-available
        width -webkit-fill-available

    .download
        text-align right

        span.icon-download
            font-size 20px
            margin-left 3px
            vertical-align middle
            

        &:hover
            background-color color-sidebar-dark-grey
            color font-color-green
